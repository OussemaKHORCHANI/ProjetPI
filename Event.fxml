            <Button fx:id="add" layoutX="24.0" layoutY="22.0" mnemonicParsing="false" onAction="#ajouterEventAction" prefHeight="45.0" prefWidth="182.0" style="-fx-background-color: #274f7d;" text="Add Event" textFill="WHITE">
