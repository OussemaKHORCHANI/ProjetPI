               <font>
                  <Font size="21.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="23.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons8-supprimer-pour-toujours-50.png" />
